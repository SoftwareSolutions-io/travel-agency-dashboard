// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all users for now
    // Restrict this further based on your application's needs
    match /{allPaths=**} {
      allow read, write: if true;
      // Example: Allow only authenticated users to upload
      // allow read: if true;
      // allow write: if request.auth != null;
    }

    // Example: Allow users to only write to their own folder
    // match /users/{userId}/{allPaths=**} {
    //  allow read: if true; // Or if request.auth != null && request.auth.uid == userId
    //  allow write: if request.auth != null && request.auth.uid == userId;
    // }

    // Example: Public read for profile pictures, but only user can write
    // match /profile-pictures/{userId}/{fileName} {
    //   allow read: if true;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
